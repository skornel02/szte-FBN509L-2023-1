---
import Navbar from "../components/Navbar.astro";
import Layout from "../layouts/Layout.astro";
import content from "../../public/labor_5_szamitasok.html?raw";
---

<Layout title="SZTE Elektronika labor">
    <Navbar />
    <main class="container mx-auto px-4">
        <h2 class="text-4xl font-bold dark:text-white text-center mb-2">
            Jegyzőkönyv (pdf)
        </h2>
        <embed src={import.meta.env.BASE_URL + './labor_5_jegyzokonyv.pdf'} type="application/pdf" />
        <hr />
        <h2 class="text-4xl font-bold dark:text-white text-center mb-2">
            Számítások (mlx)
        </h2>
        <article set:html={content} />
        <h2 class="text-4xl font-bold dark:text-white text-center mb-2">
            Feladat (pdf)
        </h2>
        <embed
            src="https://titan.physx.u-szeged.hu/~opthome/elabor/ELab_5.pdf"
            type="application/pdf"
        />
    </main>
</Layout>

<style>
    main {
        max-width: 1024px;
    }

    embed {
        border: none;
        width: 100%;
        height: 90vh;
    }
</style>
